

<div class="row">

  <div class="col s12" style="padding:1em 3em 3em 3em;">
    <div style="display:block;">
      <%= render partial: 'layouts/users/chip', locals: {user: @mix.user, text: "Posted By: "} %>
      <div class="chip"><%=@mix.genre.name if @mix.genre%></div>
      <% if current_user==@mix.user %>
        <%= link_to "Delete", 'nothing here yet', class:'btn btn-flat'%>
        <%=link_to "Edit", edit_mix_path, class:'btn btn-flat' %>
      <% end %>
    </div>


    <h3 class="thin-text"><%=@mix.title%></h3>
    <hr>
    <div class="small-text thin-text"><%=@mix.description %></div>

    <br>
    <%= render partial: "revision", locals: { revision: @mix.first_revision, title: "First revision" } %>


    <% if @mix.revisions.count>1 %>
      <%= render partial: "revision", locals: { revision: @mix.current_revision, title: "latest revision" } %>
    <% end %>
    </div>




</div>
