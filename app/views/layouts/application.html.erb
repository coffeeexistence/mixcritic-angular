<!DOCTYPE html>
<html ng-app="app">
<head>
  <title>Mixcritic</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body ng-controller="MainController as MainCtrl">
  <md-content>
    
    <md-toolbar id="top-toolbar" layout="row" layout-align="space-between center">
      
      <div flex layout="row" layout-align="center center">
        <%= link_to (image_tag('main/logo-revised.png', class:'main-logo')), root_path %>
        <md-tabs flex md-selected="currentTab">
          <md-tab id="tab1" aria-controls="tab1-content" ui-sref="mixes">Mixes</md-tab>
          <md-tab ng-if="session.loggedIn()" id="tab2" aria-controls="tab2-content" ui-sref="new_mix">New Mix</md-tab>
        </md-tabs>  
      </div>
      
      
      
      <session-actions flex></session-actions>
      
    </md-toolbar>
    
    <hr class="thin-hr">

    <div class="container">
      <alerts></alerts>
      <%= yield %>
    </div>
    
  </md-content>
</body>
</html>
