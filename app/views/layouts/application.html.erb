<!DOCTYPE html>
<html ng-app="app">
<head>
  <title>Mixcritic</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body ng-controller="MainController as MainCtrl">
  <div class="container">
    <div class="row slim vertical-align">
      <div class="col s4 valign-wrapper">
        <div class="valign"><%= link_to (image_tag('main/logo-revised.png', class:'main-logo')), root_path %></div>
      </div>
      <div class="col s4 valign-wrapper">
        <div class="centered">
         <a class="waves-effect btn-flat btn-large"
          ng-class="{disabled: !MainCtrl.loggedIn}" ui-sref="new_mix">
          <i class="material-icons left">add</i>New Mix
        </a>
         <a class="waves-effect btn-flat btn-large" ui-sref="mixes"><i class="material-icons left">album</i>Mixes</a>
        </div>
      </div>
      <div class="col s4 valign-wrapper">
        <session-actions class="centered"></session-actions>
      </div>
    </div>
  </div>
  <hr class="thin-hr">

  <div class="container">
  <alerts></alerts>
      <%= yield %>
  </div>

</body>
</html>
