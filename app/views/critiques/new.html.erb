<h1>Critique this Mix</h1>
<%= render partial: "revision", locals: { revision: @revision } %>
<% console %>
<% if flash[:errors] %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(flash[:errors].count, "error") %>
      prohibited this post from being saved:
    </h3>
 
    <ul>
    <% flash[:errors].each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="selected">
  <%= form_for @critique, url: revision_critiques_path do |f| %>
    <%= f.text_area :body, cols: "50"  %>
    <%= hidden_field_tag 'critique[critic_id]', current_user.id  %>
    <%= f.submit %>
  <% end %>
</div>

